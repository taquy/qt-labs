{
    "info": {
        "name": "Idea Management System API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Sign Up",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"Username\": \"{{userEmail}}\",\n    \"Password\": \"{{userPassword}}\",\n    \"UserAttributes\": [\n        {\n            \"Name\": \"email\",\n            \"Value\": \"{{userEmail}}\"\n        }\n    ]\n}"
                        },
                        "url": {
                            "raw": "https://cognito-idp.{{region}}.amazonaws.com/",
                            "host": ["cognito-idp", "{{region}}", "amazonaws.com"],
                            "path": ["/"]
                        },
                        "description": "Sign up a new user"
                    }
                },
                {
                    "name": "Sign In",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = JSON.parse(responseBody);",
                                    "pm.environment.set(\"authToken\", jsonData.AuthenticationResult.IdToken);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"AuthParameters\": {\n        \"USERNAME\": \"{{userEmail}}\",\n        \"PASSWORD\": \"{{userPassword}}\"\n    },\n    \"AuthFlow\": \"USER_PASSWORD_AUTH\",\n    \"ClientId\": \"{{userPoolClientId}}\"\n}"
                        },
                        "url": {
                            "raw": "https://cognito-idp.{{region}}.amazonaws.com/",
                            "host": ["cognito-idp", "{{region}}", "amazonaws.com"],
                            "path": ["/"]
                        },
                        "description": "Sign in and get JWT token"
                    }
                }
            ]
        },
        {
            "name": "Ideas",
            "item": [
                {
                    "name": "Create Idea",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "{{authToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"My New Idea\",\n    \"description\": \"This is a description of my new idea\"\n}"
                        },
                        "url": {
                            "raw": "{{apiEndpoint}}/ideas",
                            "host": ["{{apiEndpoint}}"],
                            "path": ["ideas"]
                        },
                        "description": "Create a new idea"
                    }
                },
                {
                    "name": "Get Idea",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "{{authToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{apiEndpoint}}/ideas/{{ideaId}}",
                            "host": ["{{apiEndpoint}}"],
                            "path": ["ideas", "{{ideaId}}"]
                        },
                        "description": "Get an idea by ID"
                    }
                },
                {
                    "name": "Update Idea",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "{{authToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Updated Idea Title\",\n    \"description\": \"Updated idea description\"\n}"
                        },
                        "url": {
                            "raw": "{{apiEndpoint}}/ideas/{{ideaId}}",
                            "host": ["{{apiEndpoint}}"],
                            "path": ["ideas", "{{ideaId}}"]
                        },
                        "description": "Update an existing idea"
                    }
                },
                {
                    "name": "Delete Idea",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "{{authToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{apiEndpoint}}/ideas/{{ideaId}}",
                            "host": ["{{apiEndpoint}}"],
                            "path": ["ideas", "{{ideaId}}"]
                        },
                        "description": "Delete an idea"
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "apiEndpoint",
            "value": "YOUR_API_GATEWAY_URL"
        },
        {
            "key": "region",
            "value": "YOUR_AWS_REGION"
        },
        {
            "key": "userPoolClientId",
            "value": "YOUR_COGNITO_USER_POOL_CLIENT_ID"
        },
        {
            "key": "userEmail",
            "value": "your.email@example.com"
        },
        {
            "key": "userPassword",
            "value": "YourSecurePassword123!"
        }
    ]
}
