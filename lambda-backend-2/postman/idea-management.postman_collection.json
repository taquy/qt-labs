{
  "info": {
    "name": "Idea Management API",
    "description": "API collection for Idea Management application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"YourPassword123!\",\n    \"name\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new user in the system"
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"YourPassword123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with user credentials"
          }
        }
      ]
    },
    {
      "name": "Ideas",
      "item": [
        {
          "name": "Create Idea",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"My New Idea\",\n    \"description\": \"This is a detailed description of my idea\",\n    \"category\": \"Technology\",\n    \"tags\": [\"innovation\", \"future\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ideas",
              "host": ["{{baseUrl}}"],
              "path": ["ideas"]
            },
            "description": "Create a new idea"
          }
        },
        {
          "name": "Get Idea",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/ideas/{{ideaId}}",
              "host": ["{{baseUrl}}"],
              "path": ["ideas", "{{ideaId}}"]
            },
            "description": "Get a specific idea by ID"
          }
        },
        {
          "name": "Update Idea",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Updated Idea Title\",\n    \"description\": \"Updated description of my idea\",\n    \"category\": \"Updated Category\",\n    \"tags\": [\"updated\", \"modified\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ideas/{{ideaId}}",
              "host": ["{{baseUrl}}"],
              "path": ["ideas", "{{ideaId}}"]
            },
            "description": "Update an existing idea"
          }
        },
        {
          "name": "Delete Idea",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/ideas/{{ideaId}}",
              "host": ["{{baseUrl}}"],
              "path": ["ideas", "{{ideaId}}"]
            },
            "description": "Delete a specific idea"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://{{ApiGatewayRestApi}}.execute-api.{{AWS::Region}}.amazonaws.com/{{EnvironmentName}}",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "your_access_token_here",
      "type": "string"
    },
    {
      "key": "ideaId",
      "value": "your_idea_id_here",
      "type": "string"
    }
  ]
} 