opensearch:
  enabled: true
  global:
    defaultStorageClass: "longhorn-static"
  fullnameOverride: ""
  diagnosticMode:
    enabled: false
  clusterName: jaeger
  containerPorts:
    restAPI: 9200
    transport: 9300
  security:
    enabled: true
    existingSecret: "opensearch-secrets"
    tls:
      admin:
        existingSecret: "opensearch-admin-tls-keypair"
        certKey: "tls.crt"
        keyKey: "tls.key"
      restEncryption: true
      autoGenerated: false
      verificationMode: "full"
      master:
        existingSecret: "opensearch-master-tls-keypair"
      data:
        existingSecret: "opensearch-data-tls-keypair"
      ingest:
        existingSecret: "opensearch-ingest-tls-keypair"
      coordinating:
        existingSecret: "opensearch-coordinating-tls-keypair"
      # keystoreFilename: keystore.jks
      # truststoreFilename: truststore.jks
      usePemCerts: false
      passwordsSecret: "opensearch-secrets"
      # secretKeystoreKey: "storepass"
      # secretTruststoreKey: "storepass"
  service:
    type: LoadBalancer
    ports:
      restAPI: 9200
      transport: 9300
    nodePorts:
      restAPI: ""
      transport: ""
  master:
    masterOnly: true
    replicaCount: 2
    pdb:
      create: true
    resourcesPreset: "small"
    heapSize: 128m
    podManagementPolicy: "Parallel"
    persistence:
      enabled: true
      size: 8Gi
  data:
    replicaCount: 2
    updateStrategy:
      type: RollingUpdate
    resourcesPreset: "medium"
    heapSize: 1024m
    podManagementPolicy: "Parallel"
    persistence:
      enabled: true
      size: 8Gi
  coordinating:
    replicaCount: 2
    resourcesPreset: "small"
  ingest:
    enabled: true
    replicaCount: 2
    heapSize: 128m
  sysctlImage:
    enabled: true
    resourcesPreset: "nano"
