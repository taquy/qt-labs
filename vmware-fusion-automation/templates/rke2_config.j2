{%- if lb_ip %}
server: https://{{ lb_ip }}:9345
{%- endif %}
token: {{ token }}
{%- if backends %}
tls-san:
  - rke.qt
  {%- for backend in backends %}
  - {{ backend }}
  {%- endfor %}
node-taint:
  - "CriticalAddonsOnly=true:NoExecute"
{%- endif %}

{%- if worker_type %}
node-label:
  - node-role.kubernetes.io/worker={{ worker_type }}
{%- endif %}
